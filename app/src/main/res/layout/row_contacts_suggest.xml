<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/sms_bl_cardviewRow"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin_bottom"
    card_view:cardBackgroundColor="@color/md_grey_50"
    card_view:cardElevation="2dp"
    card_view:contentPadding="2dp"
    card_view:cardCornerRadius="3dp">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:visibility="gone"
                app:civ_border_width="0dp" />

           <android.support.v7.widget.AppCompatImageView
               android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/contact_avatar"
                card_view:srcCompat="@drawable/ic_user_blue"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:orientation="vertical"
                android:padding="4dp">

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/md_teal_800"
                    android:text="Eder Xavier Rojas"
                    />

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="8494 3267"
                    />

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_country"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Nicaragua"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="vertical"
                android:gravity="end"
                android:padding="4dp">

                <com.edxavier.cerberus_sms.helpers.TextViewHelper
                    android:id="@+id/lbl_contact_operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_green_400"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="Movistar"
                    />

            </LinearLayout>




        </LinearLayout>



</android.support.v7.widget.CardView>
